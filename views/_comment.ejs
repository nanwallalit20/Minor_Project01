<li id="comment-<%= comment._id %>">
     <% if((locals.user) && (comment.user.id == locals.user.id || post.user.id==locals.user.id)) { %>
        <small>
            <a  class="delete-comment-button"  href="/comment/destroy/<%=comment._id%>">X</a>
         </small>
     <%  }  %>
         <small>
            <%=comment.user.name%>
         </small>
         <br>
         <%=comment.content%>
         <% if(locals.user){%>
            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment.id%>&amp;type=Post"> Likes - <%= comment.likes.length %></a>
            <%}else{%>
             <span> Likes - <%= comment.likes.length %></span> 
            <%}%>
         
       
</li>