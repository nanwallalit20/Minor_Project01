<link rel="stylesheet"  href="./css/userProfile.css">
<img src=" <%=userData.avatar%>" alt=" <%=userData.name%>" width="100" height="100">
        <p>
            <% if(user.id==userData.id) {%>
               <form action="/users/update/<%=userData.id%>" method="post" enctype="multipart/form-data" id="form-elements">
                <input type="text" name="name" id="name" placeholder="Your Name" value="<%=userData.name%>">
                <input type="email" name="email" id="email" placeholder="Your Email" value="<%=userData.email%>">
                <input type="file" name="avatar" placeholder="Profile_picture"  id="imageInput">
                <div id="imagePreviewBox" >
                    <img id="imagePreview" src="#" alt="Image Preview">
                </div>
                <input type="submit" placeholder="Update">
               </form>
                
            <%} else {%>
                <h1><%=userData.name%></h1>
                <h1><%=userData.email%></h1>
            <% } %>
           
        </p>
    </body>
<script type="text/javascript" src="./js/userProfile.js"></script>